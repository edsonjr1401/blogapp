{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}} 

<div class="card">
    <div class="card-body">
        <h4>Nova postagem: </h4>
        <form action="/admin/postagens/nove" method="POST">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo">Conteudo: </label>
            <input type="text" name="conteudo" class="form-control" required>
            <select name="categoria" class="custom-select">
            {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhuma categoria registrada</option>
            {{/each}}     
            </select>       
            <button class="btn btn-success mt-3" type="submit">Criar postagem</button>

        </form>
    </div>
</div>