<h3>Nova categoria</h3>

<div class="card">
    <div class="card-body">
        
        {{!-- Exibição de erros de validação --}}
        {{#each erros}}
        <div class="alert alert-danger">{{this.texto}}</div>
        {{/each}}

        <form action="/admin/categorias/nova" method="POST">
            
            {{!-- Campo Nome --}}
            <div class="mb-3">
                {{!-- Usando form-label em vez da tag label solta no form-group --}}
                <label for="nome" class="form-label">Nome:</label>
                {{!-- Adicionado 'required' para validação básica no navegador e value para reter dados após erro --}}
                <input 
                    type="text" 
                    id="nome" 
                    name="nome" 
                    placeholder="Ex: Programação Web" 
                    class="form-control" 
                    required
                    value="{{nome}}"
                >
            </div>

            {{!-- Campo Slug --}}
            <div class="mb-3">
                <label for="slug" class="form-label">Slug:</label>
                <input 
                    type="text" 
                    id="slug" 
                    name="slug" 
                    placeholder="Ex: programacao-web (apenas minúsculas e hífens)" 
                    class="form-control"
                    required
                    value="{{slug}}"
                >
                {{!-- Adicionando um texto de ajuda para o Slug --}}
                <div id="slugHelp" class="form-text">
                    O Slug deve ser único, em minúsculas e sem espaços (use hifén).
                </div>
            </div>
            
            <div class="d-flex justify-content-start mt-4">
                {{!-- Botões de Ação --}}
                <button type="submit" class="btn btn-success me-2">Criar categoria</button>
                <a href="/admin/categorias" class="btn btn-secondary">Cancelar</a>
            </div>
        
        </form>

    </div>
</div>