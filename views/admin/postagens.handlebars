<H2>Lista de postagens: </H2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{data}}</small> <br>
            <small>{{categoria}}</small> <br>
            <a href="/admin/postagens/edit/{{id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
           <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar postagem</button>
            </form>
        </div>
    </div>

{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}