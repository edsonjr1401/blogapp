<h3>Nova postagem:</h3>

<div class="card">
    <div class="card-body">
        
        {{#each erros}}
            <div class="alert alert-danger">{{texto}}</div>
        {{else}}
            {{/each}}

        <form action="/admin/postagens/nova" method="POST">
            
            <div class="form-group mb-3">
                <label for="titulo">Título:</label>
                <input type="text" name="titulo" class="form-control" required>
            </div>
            
            <div class="form-group mb-3">
                <label for="slug">Slug:</label>
                <input type="text" name="slug" class="form-control" required>
            </div>
            
            <div class="form-group mb-3">
                <label for="descricao">Descrição:</label>
                <input type="text" name="descricao" class="form-control" required>
            </div>
            
            <div class="form-group mb-3">
                <label for="conteudo">Conteúdo:</label>
                <textarea name="conteudo" class="form-control"></textarea>
            </div>
            
            <div class="form-group mb-3">
                <label for="categoria">Categoria:</label> 
                <select name="categoria" class="form-select"> 
                    
                    <option value="">-- Selecione uma Categoria --</option> 

                    {{#each categorias}}
                        <option value="{{id}}">{{nome}}</option>
                    {{else}}
                        <option value="">Nenhuma categoria registrada</option>
                    {{/each}}      
                </select>      
            </div>
            
            <button class="btn btn-success mt-3" type="submit">Criar postagem</button>

        </form>
    </div>
</div>