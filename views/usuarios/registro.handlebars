<div class="card mt-4">
    <div class="card-body">

        <!-- Exibição de Erros de Validação -->
        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}
        <!-- Bloco vazio se não houver erros -->
        {{/each}}

        <h3>Crie sua conta hoje: </h3>

        <form action="/usuarios/registro" method="POST">

            <div class="mb-3">
                <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="email">Email: </label>
                <input type="email" name="email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="senha">Senha: </label>
                <input type="password" name="senha" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="senha2">Repita a senha: </label>
                <input type="password" name="senha2" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>

    </div>
</div>